<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.haeri.landaudit.MapFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ir.haeri.landaudit.ShapeView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/zoom_in"
            android:onClick="onZoomInClick"
            android:id="@+id/zoomInButton" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/zoomInButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/zoom_out"
            android:onClick="onZoomOutClick"
            android:id="@+id/zoomOutButton" />

    </RelativeLayout>
</FrameLayout>
